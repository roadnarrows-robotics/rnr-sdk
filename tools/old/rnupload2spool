_Cmd="rnupload2spool"

_Synopsis()
{

  printf "Usage: ${_Cmd} [file...]\n"
  printf "Upload file(s) to www.roadnarrows.com/distro/+spool"
}

_Desc()
{
cat <<EOF

DESCRIPTION
  Upload file(s) to www.roadnarrows.com/distro/+spool/.

OPTIONS
  -?                    Display this help and exit.
EOF
}

# help
_help()
{
  _Synopsis
  _Desc
  exit 0
}

# error [msg1 [msg2...]]
_error()
{
  if [ $# -gt 0 ]
  then
    printf "${_Cmd}: Error: $1"
    shift
    while [ $# -gt 0 ]
    do
      printf ": $1" 
      shift
    done
    printf "\n"
  fi
   printf "Try '${_Cmd} -?' for more information.\n"
  exit 2
}

# 
# Get options. Note: first colon says that getopts will not print errors.
#
while getopts :h opt
do
  case $opt in
    # help
    h) _help;;

    # Usage option '-?' or bad option
    \?) if [ "$OPTARG" = "?" ]
        then
          _help
        else
          _error "$OPTARG" "Unknown option."
        fi
        ;;

    # Option requiring argument but none found
    \:)  _error "$OPTARG" "Required argument not specified." ;;
  esac
done

shift $(($OPTIND - 1))

spool="buckleup@www.roadnarrows.com:/home/buckleup/roadnarrows.com/distro/+spool"

files="$*"
scp $files $spool/.
